{
  "name": "timao-douyin-live-manager",
  "version": "1.0.0",
  "description": "抖音直播评论实时分析与AI话术生成工具",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev:renderer": "npm --prefix electron/renderer run dev",
    "dev:electron": "wait-on http://localhost:30013 && electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "build": "electron-builder",
    "test": "jest",
    "lint": "eslint electron/",
    "server": "python server/app.py",
    "electron": "electron .",
    "clean": "python tools/clean_caches.py",
    "clean:apply": "python tools/clean_caches.py --apply",
    "clean3": "python3 tools/clean_caches.py",
    "clean3:apply": "python3 tools/clean_caches.py --apply"
  },
  "postinstall": "npm --prefix electron/renderer install",
  "keywords": [
    "douyin",
    "live",
    "comments",
    "ai",
    "electron",
    "flask"
  ],
  "author": "提猫团队",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^38.1.2",
    "electron-builder": "^24.6.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "axios": "^1.5.0"
  },
  "build": {
    "appId": "com.xingjuai.talkingcat",
    "productName": "提猫直播助手",
    "artifactName": "TalkingCat-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "AST_module/**/*",
      "DouyinLiveWebFetcher/**/*",
      "server/**/*",
      "frontend/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "artifactName": "TalkingCat-Setup-${version}-${arch}.exe"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "artifactName": "TalkingCat-${version}-${arch}.dmg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "artifactName": "TalkingCat-${version}-${arch}.AppImage"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
