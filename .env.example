# ===========================================
# 提猫直播助手 - 环境变量配置模板
# ===========================================

# Flask 应用配置
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=127.0.0.1
FLASK_PORT=5001

# AI 服务配置 (选择其一)
# DeepSeek API
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# 豆包 API
DOUBAO_API_KEY=your_doubao_api_key_here
DOUBAO_BASE_URL=https://ark.cn-beijing.volces.com/api/v3

# 当前使用的AI服务 (deepseek/openai/doubao)
AI_PROVIDER=deepseek

# 抖音直播配置
DOUYIN_LIVE_ROOM_ID=your_room_id_here
DOUYIN_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# 应用配置
# 评论缓冲区大小
COMMENT_BUFFER_SIZE=1000

# 热词更新间隔(秒)
HOTWORD_UPDATE_INTERVAL=5

# AI话术生成间隔(秒)
AI_TIP_INTERVAL=10

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 性能配置
# 最大并发连接数
MAX_CONNECTIONS=100

# 请求超时时间(秒)
REQUEST_TIMEOUT=30

# 缓存过期时间(秒)
CACHE_EXPIRE_TIME=300

# 开发模式配置
# 是否启用热重载
HOT_RELOAD=true

# 是否启用调试模式
DEBUG_MODE=true

# 测试数据配置
# 是否使用模拟数据
USE_MOCK_DATA=false

# 模拟评论生成间隔(毫秒)
MOCK_COMMENT_INTERVAL=1000

